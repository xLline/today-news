/**app.wxss**/
.container{
  height: 100vh; /* 相对于视口的高度。视口被均分为100单位的vh */
  display: flex; /*显示设置为 弹性*/
  flex-direction: column; /*设置主轴方向为 垂直*/
  align-items: center;
  justify-content: space-around;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: flex-start;
  margin: 10rpx 25rpx 0 25rpx;
  align-items: stretch;
}

.line{
  width:100%;
  height:1rpx;
  background:#CFCFCF;
  margin: 10rpx 0 10rpx 0;
}

.newsList{
  width: 700rpx;
  margin-bottom: 15rpx;
}
.newsTitle{
  font-size: 30rpx;
}
.newsThumbnail{
  width: 220rpx;
  height: 165rpx;
  margin: 7rpx;
  border-radius: 5%;
}
.newsOne{
  display: flex;
}
.newsLeft{
  width: 465rpx;
  height: 170rpx;
  margin-top: 15rpx;
}
.newsButton{
  margin-top: 30rpx;
}
.sourceAndDate{
  font-size: 25rpx;
  color: dimgray;
}