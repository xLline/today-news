/* pages/recommend/list.wxss */
.container {
  justify-content: flex-start;
  margin: 0px;
  align-items: stretch;
}

/* 轮播图相关 */
.page-section-spacing{
  box-sizing: border-box;
}
.swiper{
  height:360rpx;
  width: 750rpx;
}
.swiper-image{
  display: block;
  width: 750rpx;
  height: 360rpx;
}

/* 列表相关 */
.imageList{
  width: 710rpx;
  margin-left: 20rpx;
  height: 320rpx;
  display: flex;
  margin-top: 20rpx;
  background-color: #F8F8FF;
  border-radius: 5%;
}

.itemLeft{
  width: 375rpx;
  height: 302rpx;
  margin: 18rpx 18rpx 0 18rpx;
}
.itemLeft image{
  width: 100%;
  height: 250rpx;
}
.imageName{
  width: 375rpx;
  height: 44rpx;
  color: black;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.imageRight{
  width: 335rpx;
  height: 300rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  margin: 20rpx 15rpx 0 0;
  font-size: 26rpx;
}
.imageRight view{
  margin-bottom: 7rpx;
}

.hotText{
  color:red; font-weight: bold; font-size:20rpx;
}
.listText{
 
  color: dimgray;
}
.bottomText{
  font-size: 22rpx;width: 288rpx;text-align: right;height: 44rpxpx;font-weight: bold;
}